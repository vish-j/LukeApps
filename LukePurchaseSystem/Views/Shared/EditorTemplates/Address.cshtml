@model LukeApps.GeneralPurchase.Classes.Address

<div class="form-inline">
    @Html.EditorFor(model => model.Line1, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.GetType().GetProperty("Line1").GetDisplay() } })

    @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.GetType().GetProperty("PostalCode").GetDisplay(), @style = "width:130px" } })

    @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.GetType().GetProperty("Street").GetDisplay(), @style = "width:128px" } })
</div>
<div class="form-inline">
    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.GetType().GetProperty("City").GetDisplay()} })

    @Html.EnumDropDownListFor(model => model.Country, htmlAttributes: new { @class = "form-control chosen-select" })
</div>
